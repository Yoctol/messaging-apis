{
  "private": true,
  "name": "messaging-apis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yoctol/messaging-apis.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "node ./scripts/build.js",
    "clean": "rimraf ./packages/*/lib",
    "postinstall": "yarn run build",
    "lint": "eslint packages examples",
    "lint:fix": "yarn run lint:fix:md && yarn run lint --fix",
    "lint:fix:md": "prettier --write **/*.md",
    "lint:staged": "lint-staged",
    "publish": "yarn run clean && yarn run build && lerna publish",
    "test": "yarn run typecheck && yarn run lint && yarn run testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit --no-cache",
    "testonly:watch": "jest --watch",
    "typecheck": "flow check"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-flow-strip-types": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "chalk": "^2.4.2",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-config-yoctol-base": "^0.21.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.4.0",
    "flow-bin": "^0.86.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.4",
    "micromatch": "^4.0.2",
    "mkdir": "^0.0.2",
    "prettier": "^1.18.2",
    "prettier-package-json": "^2.1.0",
    "rimraf": "^3.0.0"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "timers": "fake",
    "resetMocks": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  }
}
