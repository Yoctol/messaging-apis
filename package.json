{
  "private": true,
  "name": "messaging-apis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yoctol/messaging-apis.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "git clean -dfqX -- ./node_modules **/{dist,node_modules}/ ./packages/*/tsconfig*tsbuildinfo",
    "compile": "tsc --build tsconfig.build.json",
    "compile:clean": "tsc --build tsconfig.build.json --clean",
    "postinstall": "lerna run prepare && npm run compile",
    "lint": "eslint packages examples",
    "lint:fix": "yarn run lint:fix:md && yarn run lint --fix",
    "lint:fix:md": "prettier --write **/*.md",
    "lint:staged": "lint-staged",
    "publish": "yarn run clean && yarn run build && lerna publish",
    "test": "yarn run typecheck && yarn run lint && yarn run testonly",
    "testonly": "jest --verbose",
    "testonly:cov": "jest --verbose --coverage --runInBand --forceExit --no-cache",
    "testonly:watch": "jest --verbose --watchAll",
    "watch": "tsc --build tsconfig.build.json --watch"
  },
  "devDependencies": {
    "@types/append-query": "^2.0.0",
    "@types/debug": "^4.1.5",
    "@types/invariant": "^2.2.30",
    "@types/jest": "^24.0.18",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.omit": "^4.5.6",
    "@types/url-join": "^4.0.0",
    "@types/warning": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "chalk": "^2.4.2",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-config-yoctol-base": "^0.21.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.4.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.4",
    "micromatch": "^4.0.2",
    "mkdir": "^0.0.2",
    "prettier": "^1.18.2",
    "prettier-package-json": "^2.1.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.2"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
